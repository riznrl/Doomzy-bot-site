# ==========================================
# üß† CORE SETTINGS
# ==========================================

# Discord bot authentication
DISCORD_BOT_TOKEN=your_bot_token_here
CLIENT_ID=1430339848484688053
CLIENT_SECRET=your_discord_client_secret   # only required if you use /auth/login

# Redirect URI for Discord OAuth2
# (Replace <your-railway-subdomain> with your actual Railway app domain)
REDIRECT_URI=https://<your-railway-subdomain>.up.railway.app/auth/callback

# Dynamic port (Railway sets this automatically, but keep for local testing)
PORT=8080


# ==========================================
# ü™™ DISCORD CHANNEL & ROLE MAPPINGS
# ==========================================

PROFILES_CHANNEL_ID=your_profiles_channel_id
BADGES_CHANNEL_ID=your_badges_channel_id
RESOURCES_CHANNEL_ID=your_resources_channel_id
TASKS_CHANNEL_ID=your_tasks_channel_id
STORAGE_CHANNEL_ID=your_storage_channel_id
GLOBAL_FEED_CHANNEL_ID=your_global_feed_channel_id
SITE_ANNOUNCEMENTS_ID=your_site_announcements_channel_id

# Role-based access and guild info
DISCORD_GUILD_ID=your_guild_id_here
DISCORD_REQUIRED_ROLE_ID=your_required_role_id
DISCORD_SIGNUP_CHANNEL_ID=your_signup_channel_id

# Approved users for admin override or early access
APPROVED_USER_ID=your_user_id_for_admin_bypass
ALLOWED_USER_IDS=["your_user_id_for_admin_bypass"]


# ==========================================
# üåâ CONTROLBRIDGE INTEGRATION
# ==========================================

# These are used for internal bot ‚Üî site communications.
CONTROLBRIDGE_PORT=3001
CONTROLBRIDGE_ADMIN_TOKEN=your_admin_token_here


# ==========================================
# üß∞ SESSION & SECURITY
# ==========================================

SESSION_SECRET=change_this_secret
GUILD_ID=your_guild_id_here


# ==========================================
# üåê DEPLOYMENT / SELF-HEAL SYSTEM
# ==========================================

# Automatically detected by Railway (leave as is for local testing)
RAILWAY_ENVIRONMENT=production
RAILWAY_PROJECT_ID=doomzyink-railway-bot
NODE_ENV=production

# Self-healing diagnostic toggle (optional)
SELF_HEAL_DEBUG=true
INSTANCE_NAME=doomzyink-railway-prod


# ==========================================
# ü©∫ HEALTH & MONITORING
# ==========================================

